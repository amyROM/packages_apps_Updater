android_app {
    name: "Updater",

    srcs: ["src/**/*.java"],

    static_libs: [
        "com.google.android.material_material",
        "androidx.core_core",
        "androidx.appcompat_appcompat",
        "androidx.cardview_cardview",
        "androidx.preference_preference",
        "androidx.recyclerview_recyclerview",
    ],

    resource_dirs: ["res"],
    certificate: "platform",
    platform_apis: true,
    privileged: true,
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },

    required: ["privapp_whitelist_org.amyROM.updater.xml"],

}

prebuilt_etc {
    name: "privapp_whitelist_org.amyROM.updater.xml",

    src: "privapp_whitelist_org.amyROM.updater.xml",
    sub_dir: "permissions",

}
